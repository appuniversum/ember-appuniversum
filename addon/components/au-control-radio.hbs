<label for="{{@identifier}}" class="au-c-control au-c-control--radio {{this.disabled}}">
  <Input class="au-c-control__input" id="{{@identifier}}" name="{{@name}}" disabled={{@disabled}} @type="radio" @checked={{@checked}} {{on "change" this.onChange}} ...attributes />
  <span class="au-c-control__indicator"></span>
  {{@label}}
</label>
