{{#if @icon}}
  <span class="au-c-input-wrapper {{this.iconAlignment}}">
    <Input class="au-c-input au-c-input--block {{this.error}} {{this.disabled}}" @value={{@value}} disabled={{@disabled}} ...attributes/>
    {{#if (eq @iconAlignment "right")}}
    <AuIcon @icon="{{@icon}}" @alignment="right" />
    {{else}}
    <AuIcon @icon="{{@icon}}" @alignment="left" />
    {{/if}}
  </span>
{{else}}
<Input class="au-c-input {{this.error}} {{this.width}} {{this.disabled}}" @value={{@value}} disabled={{@disabled}} ...attributes/>
{{/if}}