{{#if this.isVisible}}
  <div
    class="au-c-alert
      {{this.skin}}
      {{this.size}}
      {{if @isAToast 'au-c-alert--toast'}}"
    role="alert"
    data-test-alert
    ...attributes
  >
    {{#if @icon}}
      <div
        class="au-c-alert__icon"
        aria-hidden={{if @iconVisible "false" "true"}}
        data-test-alert-icon
      >
        <AuIcon @icon={{@icon}} />
      </div>
    {{/if}}
    <div class="au-c-alert__container">
      <div class="au-c-alert__content">
        {{#if @title}}
          <p class="au-c-alert__title" data-test-alert-title>{{@title}}</p>
        {{/if}}
        <div class="au-c-alert__message" data-test-alert-message>{{yield}}</div>
      </div>
      {{#if (has-block "action")}}
        <div class="au-c-alert__action" data-test-alert-action>
          {{yield to="action"}}
        </div>
      {{/if}}
    </div>
    {{#if @closable}}
      <button
        class="au-c-alert__close"
        type="button"
        data-test-alert-close
        {{on "click" this.closeAlert}}
      >
        <AuIcon @icon="cross" @size="large" />
        <span class="au-u-hidden-visually">Sluit alert</span>
      </button>
    {{/if}}
  </div>
{{/if}}