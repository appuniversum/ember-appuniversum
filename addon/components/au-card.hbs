<article class="au-c-card au-c-card--fill {{this.size}} {{this.flex}} {{this.expandable}} {{if @expandableReversed "au-c-card--expandable-reversed"}} {{this.shadow}} {{this.divided}} {{this.textCenter}} {{this.standOut}}" ...attributes>
  {{#if this.expandable}}
    <div
      class="au-c-card__clickable"
    >
      {{yield (hash
        header = (component 'au-card-header')
      )}}
      <AuButton class="au-c-card__toggle" @size="small" @skin="naked" aria-hidden="true" focusable="false" aria-expanded="{{if this.sectionOpen "true" "false"}}" {{on "click" this.openSection}}>
        {{#if this.sectionOpen}}
          <AuIcon @icon="nav-up" @size="large" @ariaHidden="true" />
          <span class="au-u-hidden-visually au-c-card__toggle-false">
            Verberg
          </span>
        {{else}}
          <AuIcon @icon="nav-down" @size="large" @ariaHidden="true" />
          <span class="au-u-hidden-visually au-c-card__toggle-true">
            Toon
          </span>
        {{/if}}
      </AuButton>
    </div>
    {{#if this.sectionOpen}}
      <div tabindex="0">
        {{yield (hash
          content = (component 'au-card-content')
        )}}
      </div>
    {{/if}}
  {{else}}
    {{yield (hash
      header = (component 'au-card-header')
    )}}
    {{yield (hash
      content = (component 'au-card-content')
    )}}
  {{/if}}

  {{yield (hash
    footer = (component 'au-card-footer')
  )}}
</article>
