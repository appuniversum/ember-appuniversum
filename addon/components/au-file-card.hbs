<article class="au-file-card au-o-box au-o-box--small" ...attributes>
  {{#if this.isRemovable}}
    <button
      type="button"
      class="au-file-card__delete"
      data-test-file-card-delete
      {{on "click" this.delete}}
    >
      <AuIcon @icon="cross" @size="large" />
      <span class="au-u-hidden-visually">Verwijderen</span>
    </button>
  {{/if}}

  <AuHeading @level="4" @skin="6" data-test-file-card-filename>
    {{@filename}}

    {{#if @fileSize}}
      <span
        class="au-file-card__file-size"
        data-test-file-card-file-size
      >({{@fileSize}})</span>
    {{/if}}
  </AuHeading>

  {{#if this.isDownloadable}}
    <div class="au-u-margin-top-tiny">
      <a
        class="au-c-link"
        href={{@downloadLink}}
        download={{@filename}}
        data-test-file-card-download
      >
        <AuIcon @icon="download" @alignment="left" />
        Download bestand
      </a>
    </div>
  {{/if}}
</article>